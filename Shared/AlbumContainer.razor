@using Jellyfin.Sdk;
@using PortaJel_Blazor.Shared.Music_Displays;

@if(albumData != null)
{
    <div>
        <div class="menuTitleContainer">
            <h3>@Title</h3>
            <div style="display: flex;">
                View All
                <img src="/images/showgrid.svg" style="margin-left:0.25rem; height: 1.5rem;">
            </div>

        </div>

        <div class="scrollmenu">

            @foreach (var item in albumData.Items)
            {
                try
                {
                    if (item.Type != Jellyfin.Sdk.BaseItemKind.MusicAlbum)
                    {
                        return;
                    }
                    string artist = "";
                    foreach (var artistName in item.AlbumArtist)
                    {
                        artist += artistName + " ";
                    }
                    <AlbumCard ImageSrc="null" AlbumName="@item.Name" ArtistName="@item.AlbumArtist" />
                }
                catch (Exception ex)
                {
                    throw;
                }

            }
        </div>
    </div>
}


@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter] public string Title { get; set; }
    [Parameter] public BaseItemDtoQueryResult albumData { get; set; }
}
