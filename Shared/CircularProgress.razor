<div style="display: inline-flex;">
    <svg
        width="100"
        height="100"
        viewBox="0 0 36 36"
        xmlns="http://www.w3.org/2000/svg"
        style="transform: rotate(-90deg);">
        <circle
            cx="18"
            cy="18"
            r="15.9155"
            fill="none"
            stroke="#ccc"
            stroke-width="3.8">
        </circle>
        <circle
            cx="18"
            cy="18"
            r="15.9155"
            fill="none"
            stroke="#3f51b5"
            stroke-width="3.8"
            stroke-dasharray="@GetStrokeDasharray()"
            stroke-dashoffset="25">
        </circle>
    </svg>
    <div
        style="position: absolute; top: 0; left: 0; bottom: 0; right: 0; display: flex; align-items: center; justify-content: center;">
        <span>@Progress%</span>
    </div>
</div>

@code {
    [Parameter] public int Progress { get; set; } = 10;
    
    protected override void OnParametersSet()
    {
        InvokeAsync(StateHasChanged);
    }

    private string GetStrokeDasharray()
    {
        double percentage = Progress / 100.0;
        return $"{percentage * 100} 100";
    }
}