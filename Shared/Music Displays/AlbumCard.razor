@using PortaJel_Blazor.Data;
@using PortaJel_Blazor;
@using Microsoft.Maui.Controls;
@using PortaJel_Blazor.Pages;
@using PortaJel_Blazor.Pages.Views;

@inject NavigationManager NavigationManager

<div class="containerImg">
    <img src="@album.imageSrc" class="albumImage shimmerBG" @onclick="NavigateToAlbum" />
    <p class="albumText" @onclick="NavigateToArtist">
        @if (album.isSong)
        {
            <img src="/images/song.svg" />
        }
        else
        {
            <img src="/images/album.svg" />
        }
        @album.name • @album.GetArtistName()
    </p>
</div>

<style>
    .containerImg{
        display: flex;
        flex-direction: column;
        height: auto; /* Change height to 'auto' */
        inline-size: 160px;
        margin-right: 10px;
    }
</style>

@code {
    [Parameter] public Album album { get; set; } = new Album();
    string albumText = null;

    private void NavigateToAlbum()
    {
        if (album != null)
        {
            MauiProgram.mainLayout.showHeader = false;

            NavigationManager.NavigateTo($"/AlbumView/{album.id}");
        }
    }
    private void NavigateToArtist()
    {
        if(album != null)
        {
            MauiProgram.mainLayout.showHeader = false;
            NavigationManager.NavigateTo($"/ArtistView/{album.id}");
        }
    }
}
