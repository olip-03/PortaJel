<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Portajel.Pages"
             xmlns:comp="clr-namespace:Portajel.Components"
             xmlns:music="clr-namespace:Portajel.Connections.Data;assembly=Portajel.Connections"
             x:Class="Portajel.Pages.HomePage"
             x:DataType="local:HomePageViewModel"
             Title="PortaJel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings"
                     Clicked="NavigateSettings"
                     IconImageSource="settings.png" />
    </ContentPage.ToolbarItems>

    <ScrollView x:Name="ScrollViewMain" Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Favourite Items -->
            <ScrollView 
                Margin="{Binding PageMargin}"
                Orientation="Horizontal" 
                VerticalScrollBarVisibility="Never"
                HorizontalScrollBarVisibility="Never"
                Grid.Row="0">
                <HorizontalStackLayout Margin="10, 0, 10, 0">
                    <CollectionView ItemsSource="{Binding Sample}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout 
                            Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="music:Album">
                                <Grid>
                                    <Button 
                                        BackgroundColor="Transparent"
                                        ZIndex="0">
                                    </Button>
                                    <VerticalStackLayout 
                                        ZIndex="5"
                                        Margin="10"
                                        MaximumWidthRequest="210"
                                        InputTransparent="True">
                                        <Image
                                            Source="{Binding ImgSource}"
                                            BackgroundColor="LightBlue"
                                            Aspect="AspectFill"
                                            WidthRequest="200"
                                            HeightRequest="200"/>
                                        <Label 
                                            Text="{Binding Name}" 
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="1"/>
                                        <Label 
                                            Text="{Binding ArtistNames}"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="1"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </HorizontalStackLayout>
            </ScrollView>
            <comp:MusicImage HeightRequest="300" WidthRequest="300" Grid.Row="1"/>
        </Grid>
    </ScrollView>
</ContentPage>