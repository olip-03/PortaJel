<?xml version="1.0" encoding="UTF-8"?>
<vlv:VirtualViewCell
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vlv="clr-namespace:Microsoft.Maui.Controls;assembly=VirtualListView"
    xmlns:music="clr-namespace:Portajel.Connections.Database;assembly=Portajel.Connections"
	xmlns:local="clr-namespace:VirtualListViewSample"
	x:Class="VirtualListViewSample.GenericViewCell"
	x:Name="self"
	UnselectedBackground="#ffffff"
	SelectedBackground="#efefef"
	SemanticProperties.Description="{Binding Name}"
	SemanticProperties.HeadingLevel="Level3"
	x:DataType="music:AlbumData">
	<vlv:VirtualViewCell.Content>
		<Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto,*">
			<ContentView
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				HorizontalOptions="Fill"
				HeightRequest="1.4"
				Background="#f8f8f8"
				IsVisible="{DynamicResource IsNotFirstItemInSection}" />

			<Label Text="{Binding Index}" Grid.Row="1" Grid.Column="0" FontSize="20" TextColor="#afafaf" Margin="8,6,0,6" VerticalOptions="Center" HorizontalOptions="End" />
            <Label Text="{Binding Name}" TextColor="Black" Grid.Column="1" Grid.Row="1" FontSize="20" Margin="8,6,0,6"  />
        </Grid>
	</vlv:VirtualViewCell.Content>
</vlv:VirtualViewCell>