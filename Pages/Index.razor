@using Jellyfin.Sdk;
@page "/"

<AlbumContainer Title="Recently Played" albumData="@albumData" />
<br />

<AlbumContainer Title="Most Played" />
<br />

<AlbumContainer Title="Recently Added" />
<br />

<AlbumContainer Title="Random" />

@code {
    private BaseItemDtoQueryResult albumData { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            albumData = await MauiProgram.servers[0].FetchAlbumsAsync(_startIndex: 0, _limit: 10);

        }
        catch (Exception ex)
        {
            Console.Write(ex);
            throw;
        }

        StateHasChanged();
    }
}
