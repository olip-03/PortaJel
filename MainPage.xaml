<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PortaJel_Blazor"
             xmlns:pages="clr-namespace:PortaJel_Blazor.Pages"
             x:Class="PortaJel_Blazor.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type local:Main}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

        <!-- Navigation Bar -->
        <Grid x:Name="Navbar" HeightRequest="120" VerticalOptions="End" HorizontalOptions="Fill" AnchorY="0">
            <!-- Background Gradient -->
            <Frame HeightRequest="80" HorizontalOptions="Fill" VerticalOptions="End" >
                <Frame.Background>
                    <!-- StartPoint defaults to (0,0) -->
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="Transparent"
                          Offset="0" />
                        <GradientStop Color="White"
                          Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
            </Frame>
            <FlexLayout HeightRequest="60" VerticalOptions="End" JustifyContent="SpaceEvenly">
                <ImageButton Source="/Resources/home128x.png" HeightRequest="60" WidthRequest="60"/>
                <ImageButton Source="/Resources/Images/search.png" HeightRequest="35" WidthRequest="35" IsOpaque="True"/>
                <ImageButton Source="/Resources/Images/library.png" HeightRequest="35" WidthRequest="35" IsOpaque="True"/>
                <ImageButton Source="/Resources/Images/favourite.png" HeightRequest="35" WidthRequest="35" IsOpaque="True"/>
            </FlexLayout>
        </Grid>
    </Grid>
</ContentPage>
