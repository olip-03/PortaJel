<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Portajel.Desktop.Structures.ViewModel"
             x:Class="Portajel.Desktop.Components.SettingsPanel"
             x:DataType="vm:SettingsPanelViewModel"
             Name="SettingsPanelControl">
    <Border Background="#31363B"
            BorderBrush="#545B62" 
            Padding="6"
            BorderThickness="1" 
            CornerRadius="6 6 0 0" 
            Width="500" MaxHeight="500">
        <ContentControl Content="{Binding CurrentView}"/>
    </Border>
</UserControl>